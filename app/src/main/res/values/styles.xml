<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="popupContextAnimation">
		<item name="android:windowEnterAnimation">@anim/popup_scale_show</item>
		<item name="android:windowExitAnimation">@anim/popup_scale_hide</item>
	</style>

	<style name="popupGlideAnimation">
		<item name="android:windowEnterAnimation">@anim/popup_glide_show</item>
		<item name="android:windowExitAnimation">@anim/popup_glide_hide</item>
	</style>

	<style name="MyButtonStyle"
	       parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/light_blue_900</item>
		<item name="android:background">@color/transparent</item>
		<item name="android:autoSizeTextType">uniform</item>
		<item name="android:textSize">@dimen/text_size_context_menu</item>
	</style>

	<style name="ButtonStyleDelete"
	       parent="MyButtonStyle">
		<item name="android:textColor">@color/red_removed</item>
	</style>
	<style name="Widget.Theme.MyGallery.ActionBar.Fullscreen"
	       parent="Widget.AppCompat.ActionBar">
		<item name="android:background">@color/black_overlay</item>
	</style>

	<style name="Widget.Theme.MyGallery.ButtonBar.Fullscreen"
	       parent="">
		<item name="android:background">@color/black_overlay</item>
		<item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
	</style>

</resources>