<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Base.Theme.MyGallery"
	       parent="Theme.Material3.DayNight.NoActionBar">
		<!-- Customize your light theme here. -->
		<!-- <item name="colorPrimary">@color/my_light_primary</item> -->
		<item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
		<item name="android:statusBarColor">@color/black_overlay</item>
		<item name="android:navigationBarColor">@color/black_overlay</item>
	</style>

	<style name="Theme.MyGallery"
	       parent="Base.Theme.MyGallery"/>

	<style name="Theme.MyGallery.Fullscreen"
	       parent="Theme.MyGallery">
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:windowBackground">@null</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
	</style>

	<style name="ThemeOverlay.MyGallery.FullscreenContainer"
	       parent="">
		<item name="fullscreenBackgroundColor">@color/white</item>
		<item name="fullscreenTextColor">@color/black</item>
	</style>
</resources>