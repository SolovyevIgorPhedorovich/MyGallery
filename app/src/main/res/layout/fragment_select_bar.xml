<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="#F2000000"
			android:orientation="horizontal"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">

		<ImageButton
				android:id="@+id/button_back"
				android:layout_width="40dp"
				android:layout_height="match_parent"
				android:layout_marginStart="5dp"
				android:background="#00FFFFFF"
				app:srcCompat="@drawable/close_32"/>

		<TextView
				android:id="@+id/select_info"
				android:layout_width="300dp"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="5dp"
				android:textSize="20sp"
				android:gravity="center_vertical|start"/>

	</LinearLayout>

	<LinearLayout
			android:id="@+id/tool_bar"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="horizontal"
			android:background="#F2000000"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">

		<ImageButton
				android:id="@+id/button_share"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#00FFFFFF"
				android:rotation="-30"
				android:clickable="false"
				app:srcCompat="@drawable/share_32"/>

		<ImageButton
				android:id="@+id/button_move"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#00FFFFFF"
				android:clickable="false"
				app:srcCompat="@drawable/move_file"/>

		<ImageButton
				android:id="@+id/button_selected_all"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#00FFFFFF"
				app:srcCompat="@drawable/selected_all"/>

		<ImageButton
				android:id="@+id/button_remove"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#00FFFFFF"
				android:clickable="false"
				app:srcCompat="@drawable/trash_can_32"/>

		<ImageButton
				android:id="@+id/button_context_menu"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#00FFFFFF"
				app:srcCompat="@drawable/ui_menu_shape_square_4_24_regular"/>

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>