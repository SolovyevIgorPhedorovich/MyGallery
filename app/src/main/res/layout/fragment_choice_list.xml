<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/layout_height_info_selected"
			android:orientation="horizontal">

		<TextView
				android:id="@+id/count_selected"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_marginStart="10dp"
				android:gravity="bottom"
				android:textSize="24sp"
				android:text="@string/default_count_selected"/>

		<Button
				android:id="@+id/button_done_selected"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="10dp"
				android:layout_gravity="end|center"
				android:alpha="0.5"
				android:text="@string/DONE"
				android:textSize="@dimen/text_size_button"
				android:clickable="false"/>

	</LinearLayout>

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/selected_element"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"/>

		<TextView
				android:id="@+id/selected_info_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/selected_info"
				android:layout_gravity="center"/>

	</FrameLayout>

</LinearLayout>